@model DoAnLTW.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
}

<h3>Chi tiết đơn hàng #@Model.Id</h3>

<table class="table table-bordered">
    <tr>
        <th>Họ tên</th>
        <td>@Model.LastName @Model.FirstName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>SĐT</th>
        <td>@Model.PhoneNumber</td>
    </tr>
    <tr>
        <th>Địa chỉ</th>
        <td>@Model.Address</td>
    </tr>
    <tr>
        <th>Ngày đặt</th>
        <td>@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
    </tr>
    <tr>
        <th>Phương thức thanh toán</th>
        <td>@Model.PaymentMethod</td>
    </tr>
    <tr>
        <th>Đã thanh toán</th>
        <td>@(Model.IsPaid ? "✔️ Đã thanh toán" : "❌ Chưa thanh toán")</td>
    </tr>
    <tr>
        <th>Trạng thái</th>
        <td>@Model.Status.ToString()</td>
    </tr>
</table>

<h4>Danh sách sản phẩm</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Size</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Size</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("N0") đ</td>
                <td>@item.TotalPrice.ToString("N0") đ</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-right">
    <h5>Tổng tiền: <strong>@Model.TotalAmount.ToString("N0") đ</strong></h5>
</div>

<a asp-action="OrderHistory" class="btn btn-secondary">← Quay lại lịch sử</a>
