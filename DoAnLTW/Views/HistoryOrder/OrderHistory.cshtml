@model IEnumerable<DoAnLTW.Models.Order>
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.TotalAmount.ToString("N0") đ</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="OrderDetail" asp-route-id="@order.Id" class="btn btn-sm btn-info">Chi tiết</a>

                    @if (order.Status == DoAnLTW.Models.OrderStatus.ChoXuLy)
                    {
                        <button class="btn btn-sm btn-danger cancel-order" data-id="@order.Id">Hủy</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".cancel-order").click(function () {
                if (confirm("Bạn chắc chắn muốn hủy đơn hàng này?")) {
                    var orderId = $(this).data("id");
                    $.post("/HistoryOrder/CancelOrder", { id: orderId }, function (result) {
                        alert(result.message);
                        if (result.success) {
                            location.reload();
                        }
                    });
                }
            });
        });
    </script>
}
