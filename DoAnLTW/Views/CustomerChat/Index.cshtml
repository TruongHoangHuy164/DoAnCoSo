    }

    .message-left .message-bubble {
        background: #e0f7fa;
        border-bottom-left-radius: 5px;
    }

    .message-right .message-bubble {
        background: #ffcccb;
        border-bottom-right-radius: 5px;
    }

    .message-bubble strong {
        font-size: 14px;
        color: #333;
    }

