@model DoAnLTW.Models.BookServiceViewModel

@{
    ViewData["Title"] = "Đặt Dịch Vụ";
}

<h1 class="text-center">@ViewData["Title"]</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Book" method="post">
                        <div class="form-group">
                            <label for="PetId">Chọn Thú Cưng</label>
                            <select asp-for="PetId" class="form-control" asp-items="@(new SelectList(Model.UserPets, "PetId", "Name"))"></select>
                        </div>
                        <div class="form-group">
                            <label for="AppointmentDate">Ngày Hẹn</label>
                            <input asp-for="AppointmentDate" class="form-control" type="date" />
                        </div>
                        <div class="form-group">
                            <label for="AppointmentTimeString">Giờ Hẹn</label>
                            <input asp-for="AppointmentTimeString" class="form-control" type="time" />
                        </div>
                        <div class="form-group">
                            <label for="Address">Địa Chỉ</label>
                            <input asp-for="Address" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="Note">Số điện thoại - Ghi chú</label>
                            <textarea asp-for="Note" class="form-control"></textarea>
                        </div>
                        <input type="hidden" asp-for="ServiceId" />
                        <button type="submit" class="btn btn-primary btn-block">Xác Nhận Đặt Dịch Vụ</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

