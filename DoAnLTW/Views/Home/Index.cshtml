<!-- Vendor Start -->
<style>
    .vendor-carousel .bg-light {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 120px; /* Điều chỉnh chiều cao theo nhu cầu */
    }

    .vendor-carousel img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain; /* Giữ nguyên tỉ lệ ảnh, không bị méo */
    }
</style>
<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel vendor-carousel">
                @foreach (var category in Model.Categories)
                {
                    <div class="bg-light p-4">
                        <img src="@category.ImageUrl" alt="@category.Name">
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Vendor End -->
@section Scripts {
    <!-- Owl Carousel JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script>
               $(document).ready(function () {
            // Khởi tạo Owl Carousel
            $('.vendor-carousel').owlCarousel({
                loop: true,        // Quay lại đầu khi hết
                margin: 10,        // Khoảng cách giữa các item
                nav: true,         // Hiển thị nút điều hướng
                autoplay: true,    // Tự động chạy carousel
                autoplayTimeout: 3000, // Thời gian giữa mỗi slide (mặc định 3000ms = 3 giây)
                autoplayHoverPause: true, // Dừng autoplay khi hover chuột vào carousel
                responsive: {
                    0: { items: 1 },       // Hiển thị 1 item trên màn hình nhỏ
                    600: { items: 3 },     // Hiển thị 3 item trên màn hình rộng
                    1000: { items: 5 }     // Hiển thị 5 item trên màn hình rất rộng
                }
            });
        });

    </script>
}
