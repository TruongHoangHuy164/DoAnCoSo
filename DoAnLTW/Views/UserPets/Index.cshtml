@model IEnumerable<DoAnLTW.Models.Pet>

@{
    ViewData["Title"] = "Thú cưng của tôi";
}

<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-12">
            <div class="d-flex justify-content-between mb-4">
                <h2>Thú cưng của tôi</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus mr-1"></i> Thêm thú cưng mới
                </a>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle mr-2"></i> Bạn chưa có thú cưng nào. Hãy thêm thú cưng để sử dụng dịch vụ.
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var pet in Model)
                    {
                        var mainImage = pet.Images?.FirstOrDefault(img => img.IsMainImage)?.ImageUrl ?? "/images/default-pet.jpg";
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <img src="@mainImage" class="card-img-top" alt="@pet.Name" style="height: 200px; object-fit: cover;" />
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">@pet.Name</h5>
                                </div>
                                <div class="card-body">
                                    <p><strong><i class="fas fa-paw mr-2"></i>Loại:</strong> @pet.Type</p>
                                    <p><strong><i class="fas fa-tag mr-2"></i>Giống:</strong> @(pet.Breed ?? "Không có")</p>
                                    <p><strong><i class="fas fa-birthday-cake mr-2"></i>Tuổi:</strong> @pet.Age</p>
                                    @if (!string.IsNullOrEmpty(pet.Description))
                                    {
                                        <p><strong><i class="fas fa-sticky-note mr-2"></i>Ghi chú:</strong> @pet.Description</p>
                                    }
                                </div>
                                <div class="card-footer">
                                    <div class="btn-group w-100">
                                        <a asp-action="Detail" asp-route-id="@pet.PetId" class="btn btn-outline-info">
                                            <i class="fas fa-eye mr-1"></i> Xem Chi Tiết
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@pet.PetId" class="btn btn-outline-primary">
                                            <i class="fas fa-edit mr-1"></i> Sửa
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@pet.PetId" class="btn btn-outline-danger">
                                            <i class="fas fa-trash mr-1"></i> Xóa
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}