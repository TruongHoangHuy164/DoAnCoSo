@model DoAnLTW.Models.Pet

@{
    ViewData["Title"] = "Chi Tiết Thú Cưng";
}

<h1 class="text-center">@ViewData["Title"]</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-light">
            <h5 class="mb-0">@Model.Name</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>Loại:</h6>
                    <p class="font-weight-bold">@Model.Type</p>
                </div>
                <div class="col-md-6">
                    <h6>Giống:</h6>
                    <p class="font-weight-bold">@Model.Breed</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h6>Tuổi:</h6>
                    <p class="font-weight-bold">@Model.Age</p>
                </div>
                <div class="col-md-6">
                    <h6>Giới Tính:</h6>
                    <p class="font-weight-bold">@Model.Gender</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h6>Mô Tả:</h6>
                    <p class="font-weight-bold">@Model.Description </p>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Index", "UserPets")" class="btn btn-secondary">Quay Lại</a>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px; /* Bo tròn các góc của thẻ card */
    }

    .card-header {
        background-color: #ffc107; /* Màu vàng cho header */
        color: white; /* Màu chữ cho header */
    }
</style>