@model IEnumerable<DoAnLTW.Models.Size>
@{
    ViewData["Title"] = "Quản lý Kích thước";
    Layout = "~/Areas/Admin/Views/Shared/layoutAdmin.cshtml";
}

<h2>Quản lý Kích thước</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm Kích thước Mới</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kích thước</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var size in Model)
        {
            <tr>
                <td>@(size.size ?? "Không có tên")</td>
                <td>
                    @* <a asp-action="Details" asp-route-id="@size.SizeId" class="btn btn-info btn-sm">Chi tiết</a> *@
                    <a asp-action="Edit" asp-route-id="@size.SizeId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@size.SizeId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>