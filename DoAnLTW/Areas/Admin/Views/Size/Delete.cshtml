@model DoAnLTW.Models.Size
@{
    ViewData["Title"] = "Xóa Kích thước";
    Layout = "~/Areas/Admin/Views/Shared/layoutAdmin.cshtml";
}

<h2>Xóa Kích thước</h2>

<h3>Bạn có chắc muốn xóa kích thước "@(Model.size ?? "Không có tên")"?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.SizeId</dd>
        <dt class="col-sm-2">Kích thước</dt>
        <dd class="col-sm-10">@(Model.size ?? "Không có tên")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SizeId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>