@model IEnumerable<DoAnLTW.Models.Service>
@{
    ViewData["Title"] = "Quản lý dịch vụ";
    Layout = "~/Areas/Admin/Views/Shared/layoutAdmin.cshtml"; //
}

<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white me-2">
            <i class="fa-solid fa-concierge-bell"></i>
        </span> Quản lý dịch vụ
    </h3>
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
                <a asp-action="Create" class="btn btn-gradient-primary btn-fw">
                    <i class="mdi mdi-plus"></i> Tạo mới
                </a>
            </li>
        </ul>
    </nav>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh sách dịch vụ</h4>
                <div class="table-responsive">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="alert alert-warning" role="alert">
                            Không có dịch vụ nào được tìm thấy.
                        </div>
                    }
                    else
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên dịch vụ</th>
                                    <th>Giá</th>
                                    <th>Thời gian (phút)</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ServiceId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Price.ToString("N0") VNĐ</td>
                                        <td>@item.Duration</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn btn-outline-primary btn-sm">
                                                    <i class="mdi mdi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-outline-danger btn-sm">
                                                    <i class="mdi mdi-delete"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>