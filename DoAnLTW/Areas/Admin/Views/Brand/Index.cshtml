@model IEnumerable<DoAnLTW.Models.Brand>

@{
    ViewData["Title"] = "Danh sách thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/layoutAdmin.cshtml";
}

<h1>Danh sách thương hiệu</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm thương hiệu mới</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên thương hiệu</th>
            <th>Hình ảnh</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@brand.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(brand.ImageUrl))
                    {
                        <img src="@brand.ImageUrl" alt="@brand.Name" style="width:100px; height:auto;" />
                    }
                    else
                    {
                        <span>Không có hình ảnh</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@brand.BrandId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@brand.BrandId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>